<h1>Searching for - <%= @search_term %></h1>
<form method="get">
  <label for="search"></label>
  <input type="text" name="looking_for" id="search"><br/>
  <input type="submit">
</form>
<br/>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @courses.each do |course| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= image_tag(course["smallIcon"])%></td>
        <td><%= course["name"] %></td>
        <td><%= course["shortDescription"] %></td>
      </tr>
  <% end %>
</table>